<h1 class="friend">Everything that Matters</h1>

    <% @ideas.each do |idea| %>
       <p>
        <%= idea.name %>
        <%= idea.description %>
        <%= idea.picture %>
        <%= link_to 'Show', idea %>
        <%= link_to 'Edit', edit_idea_path(idea) %>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p></br>

    <% end %>




